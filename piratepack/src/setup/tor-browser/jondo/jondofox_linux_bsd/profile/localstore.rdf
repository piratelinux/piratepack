<?xml version="1.0"?>
<RDF:RDF xmlns:NC="http://home.netscape.com/NC-rdf#"
         xmlns:RDF="http://www.w3.org/1999/02/22-rdf-syntax-ns#">
  <RDF:Description RDF:about="chrome://browser/content/browser.xul">
    <NC:persist RDF:resource="chrome://browser/content/browser.xul#addon-bar"/>
    <NC:persist RDF:resource="chrome://browser/content/browser.xul#nav-bar"/>
    <NC:persist RDF:resource="chrome://browser/content/browser.xul#navigator-toolbox"/>
  </RDF:Description>
  <!-- We need that to disable the add-on bar by default as Adblock Plus puts
       its icon on it and it would be shown in this case. -->
  <RDF:Description RDF:about="chrome://browser/content/browser.xul#addon-bar"
                   collapsed="true" />
  <!-- We need that to modify the toolbar. -->
  <RDF:Description RDF:about="chrome://browser/content/browser.xul#nav-bar"
                   currentset="unified-back-forward-button,jondofox-toolbar-button,noscript-tbb,cookiemonster-status,urlbar-container,reload-button,stop-button,urlbar-search-splitter,search-container,downloads-button,dwhelper-toolbaritem,window-controls,https-everywhere-button,bookmarks-menu-button-container"/>
  <!-- We need that to tell Adblock Plus that its icon is already included into
       the browser window. Otherwise would AdBlock add it (again) which pops up
       the add-on bar.-->
  <RDF:Description RDF:about="chrome://browser/content/browser.xul#navigator-toolbox"
                   abp-iconposition="visible,addon-bar,addonbar-closebutton" />
</RDF:RDF>
